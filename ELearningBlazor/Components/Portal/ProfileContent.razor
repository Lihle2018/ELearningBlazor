@using ELearningBlazor.Services
@using ELearningBlazor.Models
@using ELearningBlazor.Utils
@inject AuthService AuthService

<div class="space-y-8">
    <!-- Profile Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
        <div class="flex items-start gap-8">
            <!-- Profile Picture -->
            <div class="flex-shrink-0">
                <div class="relative">
                    <img src="@ImageHelper.GetImagePath(AuthService.CurrentUser.ProfileImage)"
                         alt="@AuthService.CurrentUser.Name"
                         class="w-32 h-32 rounded-full object-cover border-4 border-primary/20" />
                    <button class="absolute bottom-2 right-2 bg-primary text-white p-2 rounded-full hover:bg-primary/90 transition-colors">
                        <span class="text-sm">üì∑</span>
                    </button>
                </div>
            </div>

            <!-- Profile Info -->
            <div class="flex-grow">
                <div class="flex items-start justify-between mb-6">
                    <div>
                        <h2 class="text-3xl font-bold text-midnight_text mb-2">@AuthService.CurrentUser.Name</h2>
                        <p class="text-gray-600 mb-4">@AuthService.CurrentUser.Email</p>
                        <div class="flex items-center gap-4 text-sm text-gray-500">
                            <span class="flex items-center gap-1">
                                <span>üìÖ</span>
                                Member since @AuthService.CurrentUser.JoinDate.ToString("MMMM yyyy")
                            </span>
                            <span class="flex items-center gap-1">
                                <span>üèÜ</span>
                                @completedCoursesCount certificate@(completedCoursesCount == 1 ? "" : "s") earned
                            </span>
                        </div>
                    </div>
                    <button class="bg-primary text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors">
                        Edit Profile
                    </button>
                </div>

                <!-- Learning Stats -->
                <div class="grid grid-cols-3 gap-6">
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-midnight_text">@enrolledCoursesCount</div>
                        <div class="text-sm text-gray-600">Courses Enrolled</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-midnight_text">@($"{averageProgress:F0}")%</div>
                        <div class="text-sm text-gray-600">Average Progress</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-midnight_text">@studyHours</div>
                        <div class="text-sm text-gray-600">Hours Studied</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Account Settings -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-xl font-bold text-midnight_text mb-6">Account Settings</h3>

            <div class="space-y-6">
                <!-- Personal Information -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
                    <input type="text" value="@AuthService.CurrentUser.Name"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                    <input type="email" value="@AuthService.CurrentUser.Email"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Bio</label>
                    <textarea rows="3" placeholder="Tell us about yourself..."
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                </div>

                <!-- Interests -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-3">Learning Interests</label>
                    <div class="flex flex-wrap gap-2">
                        @foreach (var interest in learningInterests)
                        {
                            <button class="@(selectedInterests.Contains(interest) ? "bg-primary text-white" : "bg-gray-100 text-gray-700") px-3 py-2 rounded-full text-sm font-medium hover:opacity-80 transition-colors"
                                    @onclick="@(() => ToggleInterest(interest))">
                                @interest
                            </button>
                        }
                    </div>
                </div>

                <div class="pt-4">
                    <button class="w-full bg-primary text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary/90 transition-colors">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>

        <!-- Learning Preferences -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-xl font-bold text-midnight_text mb-6">Learning Preferences</h3>

            <div class="space-y-6">
                <!-- Notification Settings -->
                <div>
                    <h4 class="font-semibold text-midnight_text mb-4">Notifications</h4>
                    <div class="space-y-3">
                        <label class="flex items-center gap-3">
                            <input type="checkbox" checked class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Course reminders</span>
                        </label>
                        <label class="flex items-center gap-3">
                            <input type="checkbox" checked class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">New course recommendations</span>
                        </label>
                        <label class="flex items-center gap-3">
                            <input type="checkbox" class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Achievement notifications</span>
                        </label>
                        <label class="flex items-center gap-3">
                            <input type="checkbox" class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Weekly progress reports</span>
                        </label>
                    </div>
                </div>

                <!-- Study Goals -->
                <div>
                    <h4 class="font-semibold text-midnight_text mb-4">Study Goals</h4>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm text-gray-700 mb-2">Weekly study hours</label>
                            <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                                <option>5 hours</option>
                                <option selected>10 hours</option>
                                <option>15 hours</option>
                                <option>20+ hours</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm text-gray-700 mb-2">Preferred study time</label>
                            <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
                                <option>Morning (6AM - 12PM)</option>
                                <option selected>Afternoon (12PM - 6PM)</option>
                                <option>Evening (6PM - 12AM)</option>
                                <option>Night (12AM - 6AM)</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Privacy Settings -->
                <div>
                    <h4 class="font-semibold text-midnight_text mb-4">Privacy</h4>
                    <div class="space-y-3">
                        <label class="flex items-center gap-3">
                            <input type="checkbox" checked class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Make my progress public</span>
                        </label>
                        <label class="flex items-center gap-3">
                            <input type="checkbox" class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Allow others to see my certificates</span>
                        </label>
                        <label class="flex items-center gap-3">
                            <input type="checkbox" checked class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" />
                            <span class="text-sm text-gray-700">Receive course recommendations</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Learning Activity -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="text-xl font-bold text-midnight_text mb-6">Recent Learning Activity</h3>

        <div class="space-y-4">
            @foreach (var activity in recentActivities)
            {
                <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg">
                    <div class="w-2 h-2 bg-primary rounded-full"></div>
                    <div class="flex-grow">
                        <p class="text-sm font-medium text-midnight_text">@activity.Description</p>
                        <p class="text-xs text-gray-500">@activity.Date.ToString("MMM dd, yyyy ‚Ä¢ h:mm tt")</p>
                    </div>
                    <span class="text-lg">@activity.Icon</span>
                </div>
            }
        </div>
    </div>

    <!-- Danger Zone -->
    <div class="bg-white rounded-xl shadow-sm border border-red-200 p-6">
        <h3 class="text-xl font-bold text-red-600 mb-4">Danger Zone</h3>
        <p class="text-gray-600 mb-6">Once you delete your account, there is no going back. Please be certain.</p>

        <div class="flex gap-4">
            <button class="bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors">
                Delete Account
            </button>
            <button class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors">
                Export Data
            </button>
        </div>
    </div>
</div>

@code {
    private int enrolledCoursesCount = 0;
    private int completedCoursesCount = 0;
    private double averageProgress = 0;
    private int studyHours = 42;

    private List<string> learningInterests = new()
    {
        "Web Development", "Design", "Mobile Apps", "Data Science",
        "AI & Machine Learning", "Digital Marketing", "Photography",
        "Business", "Languages", "Music"
    };

    private HashSet<string> selectedInterests = new() { "Web Development", "Design", "Mobile Apps" };

    private List<ActivityItem> recentActivities = new()
    {
        new() { Description = "Completed module 'React Components' in Full Stack JavaScript", Date = DateTime.Now.AddHours(-2), Icon = "‚úÖ" },
        new() { Description = "Started 'Design Systems with React' course", Date = DateTime.Now.AddDays(-1), Icon = "üöÄ" },
        new() { Description = "Earned certificate for 'Figma Design Basics'", Date = DateTime.Now.AddDays(-3), Icon = "üèÜ" },
        new() { Description = "Updated learning goals", Date = DateTime.Now.AddDays(-5), Icon = "üéØ" },
        new() { Description = "Joined eLearning platform", Date = DateTime.Now.AddDays(-30), Icon = "üéâ" }
    };

    protected override void OnInitialized()
    {
        LoadProfileData();
    }

    private void LoadProfileData()
    {
        if (AuthService.CurrentUser == null) return;

        var enrollments = AuthService.CurrentUser.EnrolledCourses.Where(ec => ec.IsActive).ToList();
        enrolledCoursesCount = enrollments.Count;
        completedCoursesCount = enrollments.Count(ec => ec.Progress >= 100);
        averageProgress = enrollments.Any() ? enrollments.Average(ec => ec.Progress) : 0;
    }

    private void ToggleInterest(string interest)
    {
        if (selectedInterests.Contains(interest))
        {
            selectedInterests.Remove(interest);
        }
        else
        {
            selectedInterests.Add(interest);
        }
    }

    private class ActivityItem
    {
        public string Description { get; set; } = "";
        public DateTime Date { get; set; }
        public string Icon { get; set; } = "";
    }
}