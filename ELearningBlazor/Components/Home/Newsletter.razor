<section class="bg-newsletter-bg bg-cover bg-center">
    <div class="container mx-auto lg:max-w-screen-xl md:max-w-screen-md px-4 py-20">
        <div class="text-center">
            <h2 class="text-white text-4xl lg:text-5xl font-semibold pb-8">Subscribe to our newsletter</h2>
            <p class="text-white/80 text-lg pb-8">Get the latest updates and news right in your inbox!</p>

            <div class="max-w-md mx-auto">
                <div class="relative">
                    <input @bind="emailAddress" @onkeypress="HandleKeyPress"
                           type="email" class="w-full py-4 px-6 pr-32 text-lg rounded-full focus:outline-none"
                           placeholder="Enter your email" />
                    <button @onclick="HandleSubscribe" class="absolute right-1 top-1 bg-primary text-white px-6 py-3 rounded-full hover:bg-primary/80 transition-colors">
                        Subscribe
                    </button>
                </div>
            </div>

            @if (isSubscribed)
            {
                <div class="mt-4 p-4 bg-green-500 text-white rounded-lg max-w-md mx-auto">
                    Thank you for subscribing!
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mt-4 p-4 bg-red-500 text-white rounded-lg max-w-md mx-auto">
                    @errorMessage
                </div>
            }
        </div>
    </div>
</section>

@code {
    private string emailAddress = string.Empty;
    private bool isSubscribed = false;
    private string errorMessage = string.Empty;

    private void HandleSubscribe()
    {
        errorMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(emailAddress))
        {
            errorMessage = "Please enter your email address.";
            return;
        }

        if (!IsValidEmail(emailAddress))
        {
            errorMessage = "Please enter a valid email address.";
            return;
        }

        // Here you would typically call an API to subscribe the user
        isSubscribed = true;
        emailAddress = string.Empty;

        // Hide success message after 3 seconds
        _ = Task.Delay(3000).ContinueWith(_ => {
            isSubscribed = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            HandleSubscribe();
        }
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }
}