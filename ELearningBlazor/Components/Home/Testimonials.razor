@using ELearningBlazor.Services
@using ELearningBlazor.Models
@using ELearningBlazor.Utils

<section id="testimonial">
    <div class="container mx-auto lg:max-w-screen-xl md:max-w-screen-md px-4">
        <h2 class="text-midnight_text text-5xl font-semibold text-center pb-8">See what our students <br /> have to say</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var testimonial in testimonials.Take(3))
            {
                <div class="m-3 p-10 text-left bg-white rounded-2xl shadow-testimonial-shadow1">
                    <div class="flex items-center gap-4 pb-6">
                        <img src="@ImageHelper.GetImagePath(testimonial.ImgSrc)" alt="@testimonial.Name" width="71" height="71" class="rounded-full" />
                        <div>
                            <h4 class="text-2xl font-bold">@testimonial.Name</h4>
                            <h3 class="text-lg font-normal text-black/50">@testimonial.Profession</h3>
                        </div>
                    </div>
                    <div class="flex pb-6">
                        @for (int i = 0; i < testimonial.Rating; i++)
                        {
                            <span class="text-yellow-500 text-xl">â˜…</span>
                        }
                    </div>
                    <p class="text-lg text-black/60">@testimonial.Comment</p>
                </div>
            }
        </div>
    </div>
</section>

@code {
    private List<Testimonial> testimonials = DataService.GetTestimonials();
}